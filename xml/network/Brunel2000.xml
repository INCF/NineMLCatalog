<?xml version='1.0' encoding='UTF-8'?>
<NineML xmlns="http://nineml.net/9ML/1.0">
  <Annotations>
    <Comment>
      This file contains an implementation of the network described in
      Brunel, N. 2000. "Dynamics of Sparsely Connected Networks of Excitatory
      and Inhibitory Spiking Neurons". J. Comp. Neuro. 8:3, 183-208.
    </Comment>
  </Annotations>
  <Population name="Excitatory">
    <Size>4000</Size>
    <Cell>
      <Component name="ExcitatoryNeuron">
        <Definition url="../neuron/LeakyIntegrateAndFire.xml">LeakyIntegrateAndFire</Definition>
        <Property units="Mohm" name="R">
          <SingleValue>1.5</SingleValue>
        </Property>
        <Property units="mV" name="v_reset">
          <SingleValue>10.0</SingleValue>
        </Property>
        <Property units="ms" name="tau">
          <SingleValue>20.0</SingleValue>
        </Property>
        <Property units="ms" name="refractory_period">
          <SingleValue>2.0</SingleValue>
        </Property>
        <Property units="mV" name="v_threshold">
          <SingleValue>20.0</SingleValue>
        </Property>
        <Initial units="mV" name="v">
          <SingleValue>0.0</SingleValue>
        </Initial>
        <Initial units="ms" name="refractory_end">
          <SingleValue>0.0</SingleValue>
        </Initial>
      </Component>
    </Cell>
  </Population>
  <Population name="Inhibitory">
    <Size>1000</Size>
    <Cell>
      <Component name="InhibitoryNeuron">
        <Definition url="../neuron/LeakIntegrateAndFire.xml">LeakIntegrateAndFire</Definition>
        <Property units="Mohm" name="R">
          <SingleValue>1.5</SingleValue>
        </Property>
        <Property units="mV" name="v_reset">
          <SingleValue>10.0</SingleValue>
        </Property>
        <Property units="ms" name="tau">
          <SingleValue>20.0</SingleValue>
        </Property>
        <Property units="ms" name="refractory_period">
          <SingleValue>2.0</SingleValue>
        </Property>
        <Property units="mV" name="v_threshold">
          <SingleValue>20.0</SingleValue>
        </Property>
        <Initial units="mV" name="v">
          <SingleValue>0.0</SingleValue>
        </Initial>
        <Initial units="ms" name="refractory_end">
          <SingleValue>0.0</SingleValue>
        </Initial>
      </Component>
    </Cell>
  </Population>
  <Population name="Input">
    <Size>5000</Size>
    <Cell>
      <Component name="Stimulation">
        <Definition url="../input/Poisson.xml">Poisson</Definition>
        <Property units="Hz" name="rate">
          <SingleValue>20000.0</SingleValue>
        </Property>
        <Initial units="ms" name="t_next">
          <SingleValue>5.0</SingleValue>
        </Initial>
      </Component>
    </Cell>
  </Population>  
  <Selection name="AllNeurons">
    <Concatenate>
      <Item index="0">
        <Reference>Exc</Reference>
      </Item>
      <Item index="1">
        <Reference>Inh</Reference>
      </Item>
    </Concatenate>
  </Selection>  
  <Projection name="Excitation">
    <Source>
      <Reference>Excitatory</Reference>
    </Source>
    <Destination>
      <Reference>AllNeurons</Reference>
      <FromResponse send_port="i_synaptic" receive_port="i_synaptic"/>
    </Destination>
    <Connectivity>
      <Component name="RandomExcitation">
        <Definition url="../connectionrule/RandomFanIn.xml">RandomFanIn</Definition>
        <Property units="unitless" name="number">
          <SingleValue>400</SingleValue>
        </Property>
      </Component>
    </Connectivity>
    <Response>
      <Component name="SynapticResponse">
        <Definition url="../postsynapticresponse/Alpha.xml">Alpha</Definition>
        <Property units="ms" name="tau">
          <SingleValue>0.1</SingleValue>
        </Property>
        <Initial units="nA" name="a">
          <SingleValue>0.0</SingleValue>
        </Initial>
        <Initial units="nA" name="b">
          <SingleValue>0.0</SingleValue>
        </Initial>
      </Component>
      <FromPlasticity send_port="weight" receive_port="weight"/>
    </Response>
    <Plasticity>
      <Component name="ExcitatoryPlasticity">
        <Definition url="../plasticity/Static.xml">Static</Definition>
        <Initial units="nA" name="weight">
          <SingleValue>2.4</SingleValue>
        </Initial>
      </Component>
    </Plasticity>
    <Delay units="ms">
      <SingleValue>1.5</SingleValue>
    </Delay>
  </Projection>
  <Unit symbol="nA" dimension="current" power="-9"/>
  <Projection name="Inhibition">
    <Source>
      <Reference>Inhibitory</Reference>
    </Source>
    <Destination>
      <Reference>AllNeurons</Reference>
      <FromResponse send_port="Isyn" receive_port="Isyn"/>
    </Destination>
    <Connectivity>
      <Component name="RandomInConnectivity">
        <Definition url="../connectionrule/RandomFanIn.xml">RandomFanIn</Definition>
        <Property units="unitless" name="number">
          <SingleValue>100</SingleValue>
        </Property>
      </Component>
    </Connectivity>
    <Response>
      <Component name="PostSynapticResponse">
        <Definition url="Alpha.xml">Alpha</Definition>
        <Property units="ms" name="tau">
          <SingleValue>0.1</SingleValue>
        </Property>
        <Initial units="nA" name="a">
          <SingleValue>0.0</SingleValue>
        </Initial>
        <Initial units="nA" name="b">
          <SingleValue>0.0</SingleValue>
        </Initial>
      </Component>
      <FromPlasticity send_port="weight" receive_port="weight"/>
    </Response>
    <Plasticity>
      <Component name="InhibitoryPlasticity">
        <Definition url="../plasticity/Static.xml">Static</Definition>
        <Initial units="nA" name="weight">
          <SingleValue>-12.0</SingleValue>
        </Initial>
      </Component>
    </Plasticity>
    <Delay units="ms">
      <SingleValue>1.5</SingleValue>
    </Delay>
  </Projection>
  <Projection name="InputProjection">
    <Source>
      <Reference>Input</Reference>
    </Source>
    <Destination>
      <Reference>AllNeurons</Reference>
      <FromResponse send_port="i_synaptic" receive_port="i_synaptic"/>
    </Destination>
    <Connectivity>
      <Component name="OneToOne">
        <Definition url="../connectionrule/OneToOne.xml">OneToOne</Definition>
      </Component>
    </Connectivity>
    <Response>
      <Component name="PostSynapticResponse">
        <Definition url="Alpha.xml">Alpha</Definition>
        <Property units="ms" name="tau">
          <SingleValue>0.1</SingleValue>
        </Property>
        <Initial units="nA" name="a">
          <SingleValue>0.0</SingleValue>
        </Initial>
        <Initial units="nA" name="b">
          <SingleValue>0.0</SingleValue>
        </Initial>
      </Component>
      <FromPlasticity send_port="weight" receive_port="weight"/>
    </Response>
    <Plasticity>
      <Component name="InputPlasticity">
        <Definition url="../plasticity/Static.xml">Static</Definition>
        <Initial units="nA" name="weight">
          <SingleValue>2.4</SingleValue>
        </Initial>
      </Component>
    </Plasticity>
    <Delay units="ms">
      <SingleValue>1.5</SingleValue>
    </Delay>
  </Projection>
  <Dimension name="per_time" t="-1"/>
  <Dimension i="-1" l="2" m="1" t="-3" name="voltage"/>
  <Dimension i="-2" l="2" m="1" t="-3" name="resistance"/>
  <Dimension i="1" name="current"/>
  <Dimension name="time" t="1"/>
  <Dimension name="dimensionless"/>
  <Unit symbol="Hz" dimension="per_time" power="0"/>
  <Unit symbol="mV" dimension="voltage" power="-3"/>
  <Unit symbol="ms" dimension="time" power="-3"/>
  <Unit symbol="Mohm" dimension="resistance" power="6"/>
  <Unit symbol="unitless" dimension="dimensionless" power="0"/>
</NineML>
